<dbat encoding="UTF-8"
    conn="worddb"
    lang="en"
    xmlns   ="http://www.teherba.org/2007/dbat"
    xmlns:ht="http://www.w3.org/1999/xhtml"
    target="_blank" 
    javascript="../../javascript.js"
    title="OEIS-mat.broken_link.host"
    >
    <comment lang="de">Search host</comment>

    <ht:h3><ht:a href="servlet?spec=OEIS-mat.broken_link.index">Broken links:</ht:a>
        Search host
    </ht:h3>
    <ht:form method="get">
        <ht:input label="Host" name="host" maxsize="128" size="64" init="gutenberg" /><ht:br />   
        <ht:input type="submit" value="Search" />
    </ht:form>

    <select>
        <col label="Occurs">COUNT(filename)</col>
        <col pseudo="style">CASE 
            WHEN status &lt;= '240' THEN 'grn'
            WHEN status &lt;= '399' THEN 'yel'
            ELSE                         'red' END
        </col>
        <col label="Status"  >status</col>
        <col label="Filename" link="OEIS-mat.broken_link.filename&amp;filename=">filename</col>
        <col label="Link" sep="*" wrap="javascript">
            'generalLink*' || protocol || host || port || path || filename
        </col>
        <col label="Redireted to" sep="*" wrap="javascript">
            'generalLink*' || replurl
        </col>
        <col label="Access">access</col>
        <from> brol
        </from>
        <where> UPPER(host) LIKE UPPER('%<parm name="host" />%')
        	GROUP BY filename
        </where>
        <order by="1 DESC, filename, status DESC" />
        <counter desc="File,s" />
    </select>
    <trailer/>
</dbat>
