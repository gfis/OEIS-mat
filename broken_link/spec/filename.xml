<dbat encoding="UTF-8"
    conn="worddb"
    lang="en"
    xmlns   ="http://www.teherba.org/2007/dbat"
    xmlns:ht="http://www.w3.org/1999/xhtml"
    target="_blank" 
    javascript="../../javascript.js"
    title="OEIS-mat.broken_link.filename"
    >
    <comment lang="de">Search filename</comment>

    <ht:h3><ht:a href="servlet?spec=OEIS-mat.broken_link.index">Broken links:</ht:a>
        Search filename
    </ht:h3>
    <ht:form method="get">
        <ht:input label="Filename" name="filename" maxsize="512" size="64" init="abstract.html" /><ht:br />   
        <ht:input type="submit" value="Search" />
    </ht:form>

    <select aggregate="aseqno" with=", ">
        <col label="A-number" name="aseqno" link="OEIS-mat.broken_link.aseqno&amp;aseqno=">aseqno</col>
        <col pseudo="style">CASE 
            WHEN status &lt;= '240' THEN 'grn'
            WHEN status &lt;= '399' THEN 'yel'
            ELSE                         'red' END
        </col>
        <col label="Status"  >status</col>
        <col label="Prefix"   link="OEIS-mat.broken_link.prefix&amp;prefix="    >prefix  </col>
        <col label="Filename" link="OEIS-mat.broken_link.filename&amp;filename=">filename</col>
        <col label="Link" sep="*" wrap="javascript">
            'generalLink*' || protocol || host || port || path || filename
        </col>
        <from> brol
        </from>
        <where> filename = '<parm name="filename" />'
        </where>
        <order by="status DESC, aseqno" />
    </select>
    <trailer/>
</dbat>
